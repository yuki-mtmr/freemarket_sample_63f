.content-wrapper
  .header
    .header__logo
      %svg{viewbox:  "0 0 281.19 84.08", xmlns: "http://www.w3.org/2000/svg"}
        %defs
          :css
            .cls-1{fill:#dc4912;stroke:#fff;stroke-miterlimit:10;}.cls-2{font-size:48px;fill:#231815;font-family:YuGo-Bold-83pv-RKSJ-H, YuGothic;}
        %title アセット 3
        %g{"data-name" => "レイヤー 2", id: "レイヤー_2"}
          %g{"data-name" => "レイヤー 1", id: "レイヤー_1-2"}
            %polygon.cls-1{points: "36.41 83.5 0.5 62.77 0.5 21.31 36.41 0.58 72.32 21.31 72.32 62.77 36.41 83.5"}
            %polyline.cls-1{points: "0.5 21.31 36.41 42.04 72.32 21.31"}
            %polyline.cls-1{points: "36.41 83.5 36.41 49.36 36.41 42.04"}
            %line.cls-1{x1: "36.41", x2: "0.5", y1: "52.41", y2: "31.67"}
            %line.cls-1{x1: "72.32", x2: "36.41", y1: "33.2", y2: "50.88"}
            %text.cls-2{transform: "translate(86.41 62.77)"} Fmarket
  .contents
    .contents__container
      %h2.contents__container__top
        購入内容の確認
      .contents__container__middle
        .contents__container__middle__item-box
          .contents__container__middle__item-box__image
            = image_tag @images[0].image.url, class:"contents__container__middle__item-box__image__photo"
          .contents__container__middle__item-box__name
            = @item.name
          .contents__container__middle__item-box__form
            %p.contents__container__middle__item-box__form__price
              ¥
              = @item.price.to_s(:delimited)
              %span
                着払い
            %p.contents__container__middle__item-box__form__user-have-point
              ポイントはありません
            .contents__container__middle__item-box__form__pay-box
              .contents__container__middle__item-box__form__pay-box__price-cell
                支払い金額
              .contents__container__middle__item-box__form__pay-box__all-price
                ¥
                = @item.price.to_s(:delimited)
            .contents__container__middle__item-box__form__error-message
              %p.contents__container__middle__item-box__form__error-message__color
              - if @default_card_information.blank? && @address.blank?
                配送先と支払い方法の入力を完了してください。
              - else
            = form_tag(action: :pay,method: :post) do
              %button.contents__container__middle__item-box__form__buy-btn 購入する
      .contents__container__bottom1
        .contents__container__bottom1__user-address
          %h3 配送先
          .contents__container__bottom1__user-address__text
            〒
            = @address.postal_code
            %br
            = @address.region
            = @address.city
            = @address.street
            %br
            = @address.last_name
            = @address.first_name
            %p
          .contents__container__bottom1__user-address__change-btn
            = link_to"#" do
              %span
                変更する
                = fa_icon"chevron-right"
                
      .contents__container__bottom2
        .contents__container__bottom2__user-pay-method
          %h3 支払い方法
          - if @default_card_information.blank?
            %br /
          - else
            クレジットカード
            %br
            = "************" + @default_card_information.last4
            %br
            有効期限
            %br
            - exp_month = @default_card_information.exp_month.to_s
            - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
            = exp_month + " / " + exp_year
            %br
            = image_tag "visa.svg", width:"50", height:"20"
          .contents__container__bottom2__user-pay-method__text

          .contents__container__bottom2__user-pay-method__change-btn
            = link_to "#" do
              %span
                変更する
                = fa_icon"chevron-right"  
  .footer__buy
    .footer__buy__top
      %ul
        %li 
          = link_to "#" do
            プライバシーポリシー
        %li 
          = link_to "#",class: "footer__top__line" do
            メルカリ利用規約
        %li 
          = link_to "#",class: "footer__top__line" do 
            特定商取引に関する表記
