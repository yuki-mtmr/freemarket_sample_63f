.header
  .header-middle
    .header-middle__top
      = link_to root_path do
        .header-middle__top__log
          -# フリーマーケットロゴ
          %svg{viewbox:  "0 0 281.19 84.08", xmlns: "http://www.w3.org/2000/svg"}
            %defs
              :css
                .cls-1{fill:#dc4912;stroke:#fff;stroke-miterlimit:10;}.cls-2{font-size:48px;fill:#231815;font-family:YuGo-Bold-83pv-RKSJ-H, YuGothic;}
            %title アセット 3
            %g{"data-name" => "レイヤー 2", id: "レイヤー_2"}
              %g{"data-name" => "レイヤー 1", id: "レイヤー_1-2"}
                %polygon.cls-1{points: "36.41 83.5 0.5 62.77 0.5 21.31 36.41 0.58 72.32 21.31 72.32 62.77 36.41 83.5"}
                %polyline.cls-1{points: "0.5 21.31 36.41 42.04 72.32 21.31"}
                %polyline.cls-1{points: "36.41 83.5 36.41 49.36 36.41 42.04"}
                %line.cls-1{x1: "36.41", x2: "0.5", y1: "52.41", y2: "31.67"}
                %line.cls-1{x1: "72.32", x2: "36.41", y1: "33.2", y2: "50.88"}
                %text.cls-2{transform: "translate(86.41 62.77)"} Fmarket
      .header-middle__top__search
    .header-middle__bottom
      .header-middle__bottom__left
        .header-middle__bottom__left__category
          = fa_icon 'list', class: "left__category"
          %span カテゴリーから探す
        .header-middle__bottom__left__brand
          = fa_icon 'tag', class: "left__category"
          %span ブランドから探す
      .header-middle__bottom__right

        - if user_signed_in?
          .header-middle__bottom__right__notice
            = fa_icon 'bell', class: "left__category"
            %span お知らせ
          .header-middle__bottom__right__favorite
            = fa_icon 'heart', class: "left__category"
            %span いいね！一覧
          .header-middle__bottom__right__todo
            = fa_icon 'check', class: "left__category"
            %span やることリスト
          .header-middle__bottom__right__nickname
            = fa_icon 'user', class: "left__category"
            = link_to users_path do
              = current_user.nickname

        - else
          .header-middle__bottom__right__newuser
            = link_to signup_path, class: 'header-middle__bottom__right__newuser__1' do
              新規会員登録
          .header-middle__bottom__right__loguser
            = link_to user_session_path, class: 'header-middle__bottom__right__loguser__2' do
              ログイン